{
  "dependencies": {
    "@tailwindcss/forms": "^0.5.7",
    "marked": "^12.0.1"
  },
  "name": "ela-extension",
  "description": "English learner Assistant - Chrome Extension",
  "version": "0.4.5",
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.5",
    "jest": "^29.7.0",
    "parcel": "^2.12.0",
    "prettier": "^3.8.0",
    "tailwindcss": "^3.4.3"
  },
  "scripts": {
    "clean": "rm -rf dist .parcel-cache",
    "sync:version": "./sh/sync-version.sh",
    "build:css": "tailwindcss build -i cfg/tailwind.config.css -c cfg/tailwind.config.js -o src/css/main.css",
    "copy:assets": "./sh/copy-assets.sh",
    "watch": "npm run sync:version && NODE_ENV=development npm run build:css && npm run copy:assets && parcel watch src/{*.js,*.html}",
    "build": "npm run sync:version && NODE_ENV=production npm run build:css && parcel build src/{*.js,*.html} && npm run copy:assets",
    "zip": "./sh/zip.sh",
    "pack": "NODE_ENV=production npm run clean && npm run build && npm run zip",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.js",
    "lint:fix": "eslint src/**/*.js --fix",
    "format": "prettier --write \"src/**/*.{js,json,html,css}\"",
    "format:check": "prettier --check \"src/**/*.{js,json,html,css}\"",
    "check": "npm run lint:fix && npm run format && npm test"
  },
  "keywords": [
    "chrome-extension",
    "english-learning",
    "language-learning",
    "tts",
    "text-to-speech",
    "openai",
    "ai-assistant",
    "translation",
    "vocabulary"
  ],
  "author": "janewu2005@gmail.com",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/janewu77/ela-extension.git"
  },
  "bugs": {
    "url": "https://github.com/janewu77/ela-extension/issues"
  },
  "homepage": "https://github.com/janewu77/ela-extension#readme"
}
